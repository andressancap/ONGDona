generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String?
  role         UserRole     @default(DONOR)
  createdAt    DateTime     @default(now())
  projects     Project[]    @relation("ownerProjects")
  donations    Donation[]
  verifications Verification[] @relation(name: "Verified")
}

model Project {
  id            String        @id @default(cuid())
  title         String
  description   String
  ownerId       String
  owner         User          @relation(fields: [ownerId], references: [id], name: "ownerProjects")
  goal          Float
  createdAt     DateTime      @default(now())
  donations     Donation[]
  verifications Verification[]
  isActive      Boolean       @default(true)
}

model Donation {
  id         String   @id @default(cuid())
  amount     Float
  currency   String   @default("ETH")
  donorId    String
  donor      User     @relation(fields: [donorId], references: [id])
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id])
  txHash     String?
  createdAt  DateTime @default(now())
  released   Boolean  @default(false)
}

model Verification {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id])
  verifierId String?
  verifier   User?    @relation(name: "Verified", fields: [verifierId], references: [id])
  ipfsHash   String?
  notes      String?
  createdAt  DateTime @default(now())
  approved   Boolean  @default(false)
}

enum UserRole {
  ADMIN
  DONOR
  ONG
  VERIFIER
}
